{
  "name": "@atlas/storage",
  "version": "0.1.0",
  "description": "Storage layer for Atlas - IndexedDB and sync operations",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@atlas/core": "workspace:*",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@vitest/coverage-v8": "^1.0.4",
    "fake-indexeddb": "^5.0.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
